
@{
    ViewBag.Title = "NotFound";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Page Not Found</h2>*@
<div id="404">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template">
                    <h1>Oops! 404...</h1>
                    <div class="error-details">
                        <hr />
                            Запрашиваемая страница не найдена :-(
                        <hr />
                    </div>
                    <div class="error-actions">
                        <span class="glyphicon glyphicon-home"></span>@Html.ActionLink(" Вернуться на главную", "Index", "Home")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



