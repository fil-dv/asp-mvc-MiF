@model Web_UI.Models.SongsModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!--  First Container -->
<div id="first" class="container-fluid bg-1 text-center">

    <hr />
    <h3  class="my-margin">Земля круглая</h3>
    <hr />
    @{ 
        foreach (var item in Model.Songs)
        {
            if(item.AlbumID == 1)
            {
                <ul>
                    <li>
                        <a href="@item.PathToSong">@item.SongName</a>
                    </li>
                </ul>
            }
        }
    }
    <hr />

</div>

<!-- Second Container -->

<div id="second" class="container-fluid bg-2 text-center">

    <hr />
    <h3  class="my-margin">Закон притяжения</h3>
    <hr />
    @{
        foreach (var item in Model.Songs)
        {
            if (item.AlbumID == 2)
            {
                <ul>
                    <li>
                        <a href="@item.PathToSong">@item.SongName</a>
                    </li>
                </ul>
            }
        }
    }
    <hr />

</div>


<!-- Third Container -->
<div id="accords" class="container-fluid bg-1 text-info">

    <hr />
    <h3  class="my-margin">Тексты и аккорды песен</h3>
    <hr />

    <div class="my-margin">
        @Html.DropDownList("parent", Enumerable.Empty<SelectListItem>(), "Выберите песню")
    </div>

</div>


<!-- Fourth Container (Grid) -->
<div id="about" class="container-fluid bg-2 text-info">

    <hr />
    <h3 class="my-margin">О группе:</h3>
    <hr />
        <ul>
            <li class="li-small">Год рождения - 1997г.</li>
            <li class="li-small">Место рождения - г. Перевальск, Луганская обл., Украина.</li>

        </ul>

    <hr />
    <p class="my-margin">Состав:</p>
        <ul>
            <li class="li-small">Меркулов Дмитрий - вокал, гитара, автор музыки</li>
            <li class="li-small">Филоненко Дмитрий - бас-гитара, автор текстов</li>
            <li class="li-small">Янчук Олег - гитара, клавишные</li>
            <li class="li-small">Чередниченко Алексей - барабаны</li>            
        </ul>
    <hr />
</div>


<!-- Footer -->
<footer class="container-fluid bg-4 text-center">
    <a class="scroll" href="#first"><p>Официальный сайт группы "МиФ"</p></a>
</footer>
